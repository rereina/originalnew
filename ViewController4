    func schedual1(start:Int, goal1:Int){
        let userDefaults = NSUserDefaults()

        var placestate : [String] = []
        let myview : UIView = UIView()
        //let userDefaults = NSUserDefaults.standardUserDefaults()
        let objects = userDefaults.objectForKey("openKey") as! NSMutableArray!
        var x :String
        for x in objects!{
            //配列に追加していく
            placestate.append(x as! NSString as String)
        }
        //x = "リビング"
       x = (placestate[n] as? String)!
        if placestate[n] as? String == "リビング" {
            myview.backgroundColor = UIColor.redColor()
        } else if (placestate[n] as? String == "自分の部屋") {
            myview.backgroundColor = UIColor.blueColor()
        } else if (placestate[n] as? String == "洗面所") {
            myview.backgroundColor = UIColor.greenColor()
        } else if placestate[n] as? String == "トイレ" {
            myview.backgroundColor = UIColor.purpleColor()
        } else {
            myview.backgroundColor = UIColor.orangeColor()
        }
        myview.frame = CGRectMake(222, CGFloat(93 + 4 * goal1), CGFloat(70), CGFloat(93 + 4 * goal1))
        self . view . addSubview(myview)
        
        
    }
        func goal1(n:Int) -> Int{
            let userDefaults2 = NSUserDefaults.standardUserDefaults()
            let time = userDefaults2.objectForKey("open") as! NSMutableArray!
            var t :Int = 0
            println(time)
       t = time[n] as! Int
        return t
    }

